<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_marginBottom="0dp"
    android:layout_marginLeft="0dp"
    android:layout_marginRight="0dp"
    android:layout_marginTop="0dp"
    android:background="#effdfd"
    tools:context=".MyInfo" >

    <ImageView
        android:id="@+id/slideL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#1fbba6"       
        android:src="@drawable/slide_l" />
    
    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/slideL"
        android:orientation="vertical" >
        
        <ImageView
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:background="#1fbba6"
            android:scaleType="fitStart"
            android:src="@drawable/my_info" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:padding="5dp"
            android:background="@drawable/card_border"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/portrait"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/default_head" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.28"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:background="@drawable/border_1"
                        android:gravity="center"
                        android:padding="3dp" >

                        <TextView
                            android:id="@+id/myName"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:text="@string/my_name"
                            android:textColor="#b5b5b5"
                            android:textSize="20sp" />

                        <EditText
                            android:id="@+id/nameValue"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ems="10"
                            android:background="@null"
                            android:textColor="#1fbba6"
                            android:textSize="20sp" />
                    </LinearLayout>
                    
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3dp"
                        android:padding="3dp"
                        android:background="@drawable/border_1"
                        android:gravity="center" >

                        <TextView
                            android:id="@+id/myPhone"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:text="@string/my_phone"
                            android:textColor="#b5b5b5"
                            android:textSize="20sp" />

                        <EditText
                            android:id="@+id/phoneValue"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@null"
                            android:textColor="#1fbba6"
                            android:textSize="20sp" />
                    </LinearLayout>
                    
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:padding="3dp"
                        android:background="@drawable/border_1"
                        android:gravity="center" >

                        <TextView
                            android:id="@+id/mySignature"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:text="@string/my_signature"
                            android:textColor="#b5b5b5"
                            android:textSize="20sp" />

                        <EditText
                            android:id="@+id/signatureValue"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@null"
                            android:textColor="#1fbba6"
                            android:textSize="20sp" />
                    </LinearLayout>
                    
                    
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:background="@drawable/border_1"
                android:gravity="center"
                android:padding="3dp" >

                <ImageButton
                    android:id="@+id/deleteButton"
                    android:padding="4dp"                    
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_margin="0dp"
                    android:src="@drawable/delete" />

                <TextView
                    android:id="@+id/myEmail"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="@string/my_email"
                    android:textColor="#b5b5b5"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/emailValue"
                    android:inputType="textEmailAddress"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:background="@null"
                    android:textColor="#1fbba6"
                    android:textSize="20sp" />

                <ImageButton
                    android:id="@+id/downButton"
                    android:padding="2dp"                    
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_margin="0dp"
                    android:src="@drawable/down" />

            </LinearLayout>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_1"
                android:gravity="center"
                android:padding="3dp" >

                <ImageButton
                    android:id="@+id/deleteButton"
                    android:padding="4dp"                    
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_margin="0dp"
                    android:src="@drawable/delete" />

                <TextView
                    android:id="@+id/myEmail"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="QQ"
                    android:textColor="#b5b5b5"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/qqValue"
                    
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:background="@null"
                    android:textColor="#1fbba6"
                    android:textSize="20sp" />

                <ImageButton
                    android:id="@+id/downButton"
                    android:padding="2dp"                    
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_margin="0dp"
                    android:src="@drawable/down" />

            </LinearLayout>
            
                      
        </LinearLayout>

        <ImageView
            android:id="@+id/addButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="5dp"
            android:padding="3dp"
            android:scaleType="fitStart"
            android:src="@drawable/add" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/card_border"
            android:orientation="vertical"
            android:padding="5dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:background="@drawable/border_1"
                android:gravity="center"
                android:padding="3dp" >

                <ImageButton
                    android:id="@+id/ImageButton02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_margin="0dp"
                    android:padding="4dp"
                    android:src="@drawable/delete" />

                <TextView
                    android:id="@+id/TextView01"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="寰俊"
                    android:textColor="#b5b5b5"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/EditText02"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:ems="10"
                    android:inputType="textEmailAddress"
                    android:textColor="#1fbba6"
                    android:textSize="20sp" />

                <ImageButton
                    android:id="@+id/ImageButton01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_margin="0dp"
                    android:padding="2dp"
                    android:src="@drawable/up" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:background="@drawable/border_1"
                android:gravity="center"
                android:padding="3dp" >

                <ImageButton
                    android:id="@+id/ImageButton02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_margin="0dp"
                    android:padding="4dp"
                    android:src="@drawable/delete" />

                <TextView
                    android:id="@+id/TextView01"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="寰崥"
                    android:textColor="#b5b5b5"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/EditText02"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:ems="10"
                    android:inputType="textEmailAddress"
                    android:textColor="#1fbba6"
                    android:textSize="20sp" />

                <ImageButton
                    android:id="@+id/ImageButton01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_margin="0dp"
                    android:padding="2dp"
                    android:src="@drawable/up" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>



</RelativeLayout>